{
  "name": "node-starter-template",
  "version": "1.0.0",
  "description": "Boilerplate Code for Node Projects",
  "keywords": [
    "Node",
    "TypeScript"
  ],
  "author": "Manu Bhardwaj",
  "license": "MIT",
  "scripts": {
    "watch-ts": "tsc -w",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-inspect\"",
    "serve-inspect": "NODE_ENV=dev nodemon --inspect dist/server.js",
    "build-ts": "tsc",
    "build": "npm run build-ts",
    "debug": "npm run build && npm run watch-debug",
    "serve": "node dist/server.js",
    "start": "npm run serve"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.8.1",
    "request-validator-node": "^1.0.3",
    "serve-favicon": "^2.5.0",
    "transformer-abstract-node": "^1.0.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.1",
    "@types/lodash": "^4.14.138",
    "@types/mongoose": "^5.5.34",
    "@types/uuid": "^3.4.6",
    "concurrently": "^5.0.0",
    "nodemon": "^2.0.2",
    "pug": "^2.0.4",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
